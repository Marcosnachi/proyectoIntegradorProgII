<!DOCTYPE html>
<html lang="es">

	<!-- Head -->
	<%- include('./partials/head') %> 
	<!-- /Head -->

<body>

	<!-- Header -->
	<%- include('./partials/headerLogueado') %> 
	<!-- /Header -->
			
	<div class="container products-wrapper">
		<div class="row">			
			<div id="wrapper">
				<div id="div2">
					<h2>Editar producto</h2>

					<% if (locals.errors) { %> 

						<p class="errors"> <%= locals.errors.message %> </p>

					<% } %>

					<form class="" action="/product/edit/<%= product.id %>" method="POST" enctype="multipart/form-data">
						
						<br>
						<p>Nombre del producto</p>
						<li><input type="text" name="productName" value="<%= product.productName %>"></li>

						<p>Descripci√≥n</p>
						<li><textarea style="width: 390px; height: 6em;" type="text" name="description"><%= product.description %></textarea></li>

						<p>Imagen del producto</p>
						<input type="file" name="image" value="" accept=".jpg,.jpeg,.png">

						<li><input type="submit" value="Enviar"></li>

					</form>
				</div>
			</div>		
		</div>
	</div>	

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>

</html>