<!DOCTYPE html>
<html lang="es">

	<!-- Head -->
	<%- include('./partials/head') %> 
	<!-- /Head -->

<body>

	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div id="wrapper">
				<div class="col-12">
					<h2 class="products-title">Resultados de b√∫squeda para "<%= search %>"</h2>
				</div>
					<div class="rapper">
						<% for(let i=0; i < flores.length; i++){ %>

							<div class="search-products">
								<section class="product-box">
									<a href="/product/id/<%= flores[i].id %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= flores[i].image %>" alt="flor1">
										</figure>
										<article class="product-box_data">
											<h2><%= flores[i].productName %></h2>
											<p><%= flores[i].description %></p>
											<p>Cargado por: <%= flores[i].user.nombre %> <%= flores[i].user.apellido %></p>
											<!-- <p>Comentarios: 12</p> -->
										</article>
									</a>
								</section>
							</div>

						<% } %>
					</div>
					<% if(flores.length == 0) { %>

						<div class="col-12">
							<h2 class="products-subtitle">No se encontraron resultados para <%= search %></h2>
						</div>

					<% } %>
			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->

</body>

</html>