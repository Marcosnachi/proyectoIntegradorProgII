<!DOCTYPE html>
<html lang="es">

	<!-- Head -->
	<%- include('./partials/head') %> 
	<!-- /Head -->

<body>

	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>

	<!-- Búsquedas -->
	<div class="container products-wrapper">
		<div class="row">
			<!-- Show the "searched" products -->
			<% for(let i=0; i < flores.length; i++){ %>
					
				<div class="col-12 col-sm-6 col-lg-3">

					<section class="product-box">
						<a href="/product/id/<%= flores[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/florfem.jpg" alt="flor1">
							</figure>
							<article class="product-box_data">
								<h2><%= flores[i].productName %></h2>
								<p><%= flores[i].description %></p>
								<!-- <p>Comentarios: 12</p> -->
							</article>
						</a>
					</section>

				</div>

		<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->

</body>

</html>