					<% if (locals.errors) { %> 

						<p class="errors"> <%= locals.errors.message %> </p>

					<% } %>
					
					<form class="" action="/register/store" method="POST">

						<li><input id="nombre" type="text" name="nombre" placeholder="Nombre" value=""><input id="apellido" type="text" placeholder="Apellidos" name="apellido" value=""></li>
						
						<li><input type="text" placeholder="Correo electrónico" name="email" value=""></li>

						<li><input type="password" placeholder="Contraseña" name="password" value=""></li>
						
						<li><input type="text" placeholder="Número de DNI" name="dni" value=""></li>

