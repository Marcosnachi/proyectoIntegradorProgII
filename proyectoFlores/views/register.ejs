						<li><input type="date" name="birthDate" value=""></li>
						<br>

						<li><input type="radio" name="genero" value="">Mujer <input type="radio" name="genero" value="">Hombre</li>	

						<li><input type="submit" value="Enviar"></li>

					</form>
				</div>		
			</div>		
		</div>
	</div>
	
	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>

</html>