<!DOCTYPE html>
<html lang="es">

	<!-- Head -->
	<%- include('./partials/head') %> 
	<!-- /Head -->

<body> 

	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">			
			<div id="wrapper">
				<div id="div2">
					<h2>Registrarse</h2>
