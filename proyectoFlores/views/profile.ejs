	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= flores.image %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					<% if(locals.user && locals.user.id == id) { %>
						<h1 class="main-title"><%= locals.user.nombre %> <%= locals.user.apellido %>
					<% } else { %>
						<h1 class="main-title"><%= flores.nombre %> <%= flores.apellido %>
					<% } %>

					<% if(locals.user && locals.user.id == id) { %>
						<a href="/profile/edit/">
							<i class="fas fa-cog"></i>
						</a>
					<% } %>

					</h1>
					<% if(locals.user && locals.user.id != id) { %>
					<a class="btn mt-3 ml-4" href="">Seguir</a>
					<% } %>
				</div>
				<div>
					<ul class="">
						<li><%= flores.products.length %> productos</li>
						<li>8.500.000 seguidores</li>
						<li><%= flores.comments.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<div class="container products-perfil">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% if(flores.products.length) { %>
				<% for(let i=0; i < flores.products.length; i++){ %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/id/<%= flores.products[i].id %>">
									<figure class="product-box_image">
										<img src="/images/products/<%= flores.products[i].image %>" alt="flor1">
									</figure>
									<article class="product-box_data">
										<h2><%= flores.products[i].productName %></h2>
										<p><%= flores.products[i].description %></p>
										<!-- <p>Comentarios: 12</p> -->
									</article>
								</a>
							</section>
						</div>
				<% } %>
			<% } else { %>
				<div class="col-12">
					<h2 class="products-subtitle">Todavía no tenes ningún producto cargado</h2>
				</div>
			<% } %>


