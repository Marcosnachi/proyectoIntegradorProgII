<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-6 col-md-3">
					<a href="/" class="main-header_home-link">
						<img class="headerimg" src="/images/logoFranco.png">
					</a>
				</div>
	
				<div class="col-6 col-md-6">
					<form action="/search" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-3">
					<a class="main-header_credit-link">
						<i class="fas fa-chess-queen"></i>
						Todas las flores en un sólo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/product/add">Agregar producto</a></li>
				</ul>
	
				<ul class="right-navbar">
					<li><a href="/profile/id/<%= user.id %>">
							<%= locals.user.nombre %>
						  <i class="fas fa-user"></i>
						</a>
					</li>
					<li>
						<form action="/login/logout" method="POST">
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<!-- /Header -->